{
	"name": "storybook",
	"version": "0.0.0",
	"type": "module",
	"private": true,
	"scripts": {
		"dev": "tsx scripts/manage-logs.ts && storybook dev -p 6007",
		"kill": "pnpm dlx kill-port 6007",
		"build": "storybook build --docs",
		"preview-storybook": "serve storybook-static",
		"clean": "rm -rf .turbo node_modules",
		"lint": "biome lint ./stories/*.stories.tsx",
		"format": "biome format ./stories/*.stories.tsx --write",
		"check": "biome check ./stories/*.stories.tsx",
		"doctor": "tsx scripts/manage-logs.ts && storybook doctor",
		"archive-logs": "tsx scripts/manage-logs.ts",
		"typecheck": "tsc --noEmit"
	},
	"dependencies": {
		"@repo/ui-web": "workspace:*",
		"react": "19.1.0",
		"react-dom": "19.1.0",
		"tsx": "^4.20.4"
	},
	"devDependencies": {
		"@chromatic-com/storybook": "4.1.0",
		"@repo/tailwind-config": "workspace:*",
		"@repo/typescript-config": "workspace:*",
		"@storybook/addon-docs": "^9.1.2",
		"@storybook/addon-links": "^9.1.2",
		"@storybook/addon-onboarding": "9.1.2",
		"@storybook/addon-postcss": "2.0.0",
		"@storybook/addon-styling-webpack": "2.0.0",
		"@storybook/addon-themes": "9.1.2",
		"@storybook/react": "^9.1.2",
		"@storybook/react-vite": "^9.1.2",
		"@storybook/types": "^8.6.14",
		"@tailwindcss/postcss": "^4.1.11",
		"@types/node": "^24.3.0",
		"@vitejs/plugin-react": "^4.2.1",
		"autoprefixer": "^10.4.21",
		"serve": "^14.2.1",
		"storybook": "^9.1.2",
		"tailwindcss": "^4.1.11",
		"typescript": "5.5.4",
		"vite": "^5.1.4"
	}
}
