{
	"name": "@repo/types",
	"version": "1.0.0",
	"description": "Shared TypeScript types for Hotel Booking system",
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"default": "./dist/index.js"
		},
		"./common": {
			"types": "./dist/common/index.d.ts",
			"default": "./dist/common/index.js"
		},
		"./database": {
			"types": "./dist/database/index.d.ts",
			"default": "./dist/database/index.js"
		},
		"./reservations": {
			"types": "./dist/reservations/index.d.ts",
			"default": "./dist/reservations/index.js"
		}
	},
	"scripts": {
		"build": "tsc",
		"dev": "tsc -b -w",
		"clean": "rm -rf dist",
		"typecheck": "tsc --noEmit",
		"lint": "biome lint .",
		"format": "biome format --write ."
	},
	"dependencies": {
		"@prisma/client": "^6.3.1",
		"zod": "^3.24.1"
	},
	"devDependencies": {
		"@repo/typescript-config": "workspace:*",
		"typescript": "^5.7.3"
	},
	"keywords": [
		"types",
		"typescript",
		"hotel-booking"
	],
	"author": "",
	"packageManager": "pnpm@10.14.0"
}
