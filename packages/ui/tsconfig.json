{
	"extends": "@repo/typescript-config/react-library.json",
	"compilerOptions": {
		"lib": [
			"es2022",
			"DOM",
			"DOM.Iterable"
		],
		"sourceMap": true,
		"types": [
			"node"
		],
		"outDir": "dist",
		"noEmit": false,
		"declaration": true,
		"declarationMap": true,
		"jsx": "react-jsx",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"target": "ES2022"
	},
	"include": [
		"src"
	],
	"exclude": [
		"node_modules",
		"dist",
		"build"
	]
}