{
	"$schema": "https://turborepo.com/schema.json",
	"ui": "tui",
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"inputs": ["$TURBO_DEFAULT$", ".env*"],
			"outputs": [".next/**", "!.next/cache/**", "dist/**"]
		},
		"lint": {
			"dependsOn": ["^lint"]
		},
		"typecheck": {
			"dependsOn": ["^typecheck"],
			"inputs": ["$TURBO_DEFAULT$", "tsconfig.json"]
		},
		"format": {
			"dependsOn": ["^format"]
		},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"kill": {
			"dependsOn": ["^kill"],
			"cache": false,
			"persistent": true
		},
		"test": {
			"inputs": ["$TURBO_DEFAULT$", "$TURBO_ROOT$/vitest.config.ts"],
			"dependsOn": ["transit", "@repo/vitest-config#build"],
			"outputs": ["coverage.json"]
		},
		"e2e": {
			"dependsOn": ["build"],
			"inputs": ["e2e/**", "playwright.config.ts"],
			"outputs": ["playwright-report/**", "test-results/**", "test-results.json"]
		},
		"e2e:smoke": {
			"dependsOn": ["build"],
			"inputs": ["e2e/**/*.smoke.spec.ts", "playwright.config.ts"],
			"outputs": ["playwright-report/**", "test-results/**"]
		},
		"transit": {
			"dependsOn": ["^transit"]
		}
	}
}
